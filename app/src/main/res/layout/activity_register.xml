<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registerActivity"
    android:background="@drawable/register_background">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorAccent"
        android:id="@+id/reg_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_toolbar"
        android:layout_marginTop="120dp"
        android:hint="Name"
        android:fontFamily="@font/r_extrabold"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="textPersonName"
        android:id="@+id/reg_name_text"
        />


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_name_text"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:fontFamily="@font/r_extrabold"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="textEmailAddress"
        android:id="@+id/reg_mail_text"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_mail_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Phone Number"
        android:digits="0123456789"
        android:fontFamily="@font/r_extrabold"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/reg_mobile_text"
        />

    <!--

    <com.rilixtech.widget.countrycodepicker.CountryCodePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg_cpp"
        android:padding="10dp"
        android:layout_toStartOf="@id/reg_mobile_text"
        android:layout_below="@id/reg_mail_text"
        android:layout_marginTop="10dp"
        />

    -->


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:layout_below="@+id/reg_mobile_text"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/r_extrabold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:id="@+id/reg_register_btn"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_mobile_text"
        android:layout_marginTop="40dp"
        android:id="@+id/reg_progressBar"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_register_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="By registering, I agree to learnizy's "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:fontFamily="@font/r_extrabold"
        android:id="@+id/i_agree"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/r_extrabold"
        android:text="T&amp;Cs"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:layout_toEndOf="@+id/i_agree"
        android:id="@+id/reg_termcondition_btn"
        android:layout_below="@id/reg_register_btn"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/r_extrabold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:text="Already a user?  "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:id="@+id/already_user"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/r_extrabold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:text="Login"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/already_user"
        android:id="@+id/reg_login_btn"/>


</RelativeLayout>